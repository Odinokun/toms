                    img(src="assets/img/clients-03.jpg" alt="client")
                  .about-sec__slider-item
                    img(src="assets/img/clients-04.jpg" alt="client")
                  .about-sec__slider-item
                    img(src="assets/img/clients-05.jpg" alt="client")
              //end   about-clients

              //begin about-news
              section.about-news
                header.about-sec__header
                  h3.about-sec__title Новости
                .about-sec__news-list
                  a(href="#").about-sec__news-item
                    .about-sec__news-pic
                      img(src="assets/img/news-01.jpg" alt="news")
