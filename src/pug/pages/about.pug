                  +about-advantages__item('07', 'инновационные методы проектирования')
                  +about-advantages__item('08', 'инновационные методы проектирования')
              //end   about-advantages

              //begin about-clients
              section.about-clients
                header.about-sec__header
                  h3.about-sec__title Наши клиенты
                
                .about-sec__slider#about-sec__slider
                  .about-sec__slider-item
                    img(src="assets/img/clients-01.jpg" alt="client")
                  .about-sec__slider-item
                    img(src="assets/img/clients-02.jpg" alt="client")
